{"code":"import { __awaiter } from \"tslib\";\nimport { simpleGit } from \"simple-git\";\nimport createLogger from \"progress-estimator\";\nimport chalk from \"chalk\";\n// 初始化进度条\nconst logger = createLogger({\n    spinner: {\n        interval: 100, // 100毫秒刷新一次\n        frames: [\"⠋\", \"⠙\", \"⠹\", \"⠸\"].map((item) => chalk.blue(item)), // 进度条的样式，\n    },\n});\nconst getOptions = {\n    baseDir: `${process.cwd()}/project`, // 指定 simple-git 操作的目录，默认为 process.cwd() 表示当前目录\n    binary: \"git\", // 指定 git 的二进制文件位置\n    maxConcurrentProcesses: 6, // 最大并发进程数\n    trimmed: false, // git 输出的结果是否自动去除前后多余的空白字符\n};\nexport const clone = (url, projectName, branchOptions) => __awaiter(void 0, void 0, void 0, function* () {\n    const git = simpleGit(getOptions);\n    try {\n        yield logger(git.clone(url, projectName, branchOptions), \"代码下载中...\", {\n            estimate: 5000, // 预计下载时间\n        });\n        console.log();\n        console.log(chalk.green(\"代码下载完成！\"));\n        console.log(\"=====================================================\");\n        console.log(\"================= 欢迎使用 benchu-cli ===============\");\n        console.log(\"=====================================================\");\n        console.log();\n        console.log(\"======== pnpm install 安装依赖， pnpm run dev 运行项目 =======\");\n    }\n    catch (e) {\n        console.log(\"clone error\", e);\n    }\n});\n","references":["/Users/abel/Documents/study/架构/tianbenchu-cli/node_modules/.pnpm/simple-git@3.27.0/node_modules/simple-git/dist/typings/index.d.ts","/Users/abel/Documents/study/架构/tianbenchu-cli/node_modules/.pnpm/progress-estimator@0.3.1/node_modules/progress-estimator/types/index.d.ts","/Users/abel/Documents/study/架构/tianbenchu-cli/node_modules/.pnpm/chalk@4.1.2/node_modules/chalk/index.d.ts"]}
